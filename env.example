# ===================================
# SSB COMPASS - ENVIRONMENT CONFIGURATION
# ===================================
# Copy this to .env file in backend folder
# Update values according to your setup

# ===== SERVER CONFIGURATION =====
PORT=5000
NODE_ENV=development

# ===== JWT AUTHENTICATION =====
# Generate a strong secret key for production
# Use at least 32 characters
JWT_SECRET=ssb-compass-secret-key-min-32-characters-change-in-production
JWT_EXPIRE=7d

# ===== DATABASE CONFIGURATION =====
# Choose one: MongoDB or Firebase

# MongoDB Connection (if using MongoDB)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/ssb_compass?retryWrites=true&w=majority

# Firebase Configuration (if using Firebase)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your-sender-id
FIREBASE_APP_ID=your-app-id

# ===== UPI PAYMENT CONFIGURATION =====
# Current UPI ID for receiving payments
UPI_ID=8290002626@axl
UPI_MERCHANT_NAME=SSB COMPASS
UPI_TRANSACTION_PREFIX=SSB

# ===== ADMIN CREDENTIALS =====
# Default admin credentials (CHANGE IN PRODUCTION!)
ADMIN_ID=ADMIN123
ADMIN_PASSWORD=SSBNEW2026

# ===== EMAIL CONFIGURATION =====
# For sending notifications and receipts
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Email addresses
ADMIN_EMAIL=admin@ssbcompass.com
SUPPORT_EMAIL=support@ssbcompass.com
NOREPLY_EMAIL=noreply@ssbcompass.com

# ===== FRONTEND CONFIGURATION =====
# For CORS and cross-origin requests
FRONTEND_URL=http://localhost:3000
FRONTEND_PORT=3000

# Production Frontend URL
PRODUCTION_FRONTEND_URL=https://ssbcompass.com

# ===== FILE UPLOAD CONFIGURATION =====
# Maximum file size (in bytes)
MAX_FILE_SIZE=5242880  # 5MB

# Allowed file types
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# ===== PAYMENT CONFIGURATION =====
# Payment methods enabled
ENABLE_UPI=true
ENABLE_STRIPE=false
ENABLE_RAZORPAY=false

# Stripe Configuration (if needed)
STRIPE_PUBLIC_KEY=pk_test_your_key
STRIPE_SECRET_KEY=sk_test_your_key

# Razorpay Configuration (if needed)
RAZORPAY_KEY_ID=your_key_id
RAZORPAY_KEY_SECRET=your_key_secret

# ===== REFUND CONFIGURATION =====
# Days within which refund can be requested
REFUND_WINDOW_DAYS=3

# ===== ANALYTICS CONFIGURATION =====
# Google Analytics
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# ===== SECURITY CONFIGURATION =====
# CORS Origins (comma separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,https://ssbcompass.com

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  # Max requests per window

# ===== NOTIFICATION CONFIGURATION =====
# Send email notifications
SEND_PAYMENT_CONFIRMATION=true
SEND_WELCOME_EMAIL=true
SEND_COURSE_ACCESS_EMAIL=true
SEND_REFUND_NOTIFICATION=true

# WhatsApp Business API (if configured)
WHATSAPP_BUSINESS_API_KEY=your_api_key
WHATSAPP_PHONE_NUMBER=+919876543210

# ===== LOGGING CONFIGURATION =====
LOG_LEVEL=info  # error, warn, info, debug
LOG_FILE=logs/server.log

# ===== CACHE CONFIGURATION =====
# Redis Cache (optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ===== SESSION CONFIGURATION =====
SESSION_SECRET=your-session-secret-min-32-chars
SESSION_TIMEOUT=7200000  # 2 hours in milliseconds

# ===== API CONFIGURATION =====
API_VERSION=v1
API_RATE_LIMIT_ENABLED=true
API_TIMEOUT=30000  # 30 seconds

# ===== COURSE CONFIGURATION =====
# Default course duration units
DURATION_UNIT=minutes

# ===== FEATURES CONFIGURATION =====
# Enable/Disable features
FEATURE_USER_REGISTRATION=true
FEATURE_SOCIAL_LOGIN=false
FEATURE_REFERRAL=false
FEATURE_CERTIFICATES=true
FEATURE_LIVE_CLASSES=false
FEATURE_DISCUSSION_FORUM=true
FEATURE_PEER_LEARNING=false

# ===== MAINTENANCE MODE =====
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=Platform under maintenance. Please check back later.

# ===== DEBUG MODE =====
# Enable detailed logging and error messages
DEBUG=false

# ===== BACKUP CONFIGURATION =====
# Database backup settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# ===== SMS CONFIGURATION =====
# For SMS notifications (optional)
SMS_PROVIDER=twilio  # or sns, etc
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ===== DEPLOYMENT =====
# Environment type
DEPLOYMENT_ENV=development  # development, staging, production

# Auto-scaling settings
ENABLE_AUTO_SCALING=false
MIN_INSTANCES=1
MAX_INSTANCES=5

# ===== MONITORING =====
# Sentry Error Tracking
SENTRY_DSN=https://key@sentry.io/project

# New Relic Monitoring
NEW_RELIC_LICENSE_KEY=your_license_key

# ===== CDN CONFIGURATION =====
# For serving static files
CDN_URL=https://cdn.ssbcompass.com
USE_CDN=false

# ===== MISCELLANEOUS =====
# Company Information
COMPANY_NAME=SSB COMPASS
COMPANY_WEBSITE=https://ssbcompass.com
COMPANY_PHONE=+91-XXXXXXXXXX
COMPANY_ADDRESS=Gothra, Rajasthan, India

# Support Information
SUPPORT_PHONE=+91-XXXXXXXXXX
SUPPORT_EMAIL=support@ssbcompass.com
SUPPORT_HOURS=9AM-9PM IST

# ===== NOTES =====
# 1. Never commit this file to version control
# 2. Keep .env file in backend folder only
# 3. Use different values for development and production
# 4. Keep sensitive information (passwords, keys) secure
# 5. Use strong, random values for JWT_SECRET and SESSION_SECRET
# 6. Update all values before deploying to production
# 7. For production, use environment variables in hosting platform
#    (Heroku, Vercel, AWS, etc.) instead of .env file

# ===== QUICK SETUP GUIDE =====
#
# 1. Copy this file and rename to .env
# 2. Update the following CRITICAL values:
#    - JWT_SECRET (use random 32+ chars)
#    - ADMIN_ID and ADMIN_PASSWORD (change from default)
#    - UPI_ID (your actual UPI ID)
#    - Database connection strings
#    - Email configuration
#
# 3. For local development:
#    PORT=5000
#    NODE_ENV=development
#    DEBUG=true
#
# 4. For production:
#    PORT=5000
#    NODE_ENV=production
#    DEBUG=false
#    Use secure database and external services
#
# ===== END OF CONFIGURATION =====
